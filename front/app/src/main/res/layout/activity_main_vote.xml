<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_vote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Voter pour améliorer l'application"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_create_vote"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:text="Créer un vote" />

            <Button
                android:id="@+id/bt_participate_vote"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Participer à un vote" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitter" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|right"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets3.lottiefiles.com/private_files/lf30_CxKW0a.json" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>